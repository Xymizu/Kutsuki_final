<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header Text -->

    <!-- Subtitle Text -->

    <TextView
        android:id="@+id/textView4"
        android:layout_width="304dp"
        android:layout_height="87dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="152dp"
        android:fontFamily="@font/gilroy_bold"
        android:text="Hello, welcome to Kutsuki"
        android:textColor="@color/soft_green"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="272dp"
        android:layout_height="38dp"
        android:fontFamily="@font/gilroy_medium"
        android:text="Welcome! Please enter your details to sign in"
        android:textColor="@color/white_fade"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/textView4"
        app:layout_constraintTop_toBottomOf="@id/textView4" />

    <!-- Email Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/usernameSignUp"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputUsernameSignUp"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:fontFamily="@font/gilroy_regular"
            android:hint="Username" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Password Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordSignUp"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintTop_toBottomOf="@id/usernameSignUp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputPasswordSignUp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="@font/gilroy_regular"
            android:hint="Password" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Confirm Password Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailSignUp"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintTop_toBottomOf="@id/passwordSignUp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputEmailSignUp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="@font/gilroy_regular"
            android:hint="E-Mail" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Sign In Button -->

    <!-- Already Have Account Button -->
    <Button
        android:id="@+id/btnSignin2"
        android:layout_width="308dp"
        android:layout_height="55dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="@color/soft_green"
        android:fontFamily="@font/gilroy_bold"
        android:text="Sign Up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailSignUp" />

    <Button
        android:id="@+id/btnAlready"
        android:layout_width="308dp"
        android:layout_height="55dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/gilroy_bold"
        android:text="Already have an account?"
        app:backgroundTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/btnSignin2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>